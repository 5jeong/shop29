<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.toy2.shop29.qna.AttachmentMapper">

    <!-- CREATE -->
    <insert id="insert" parameterType="com.toy2.shop29.qna.domain.AttachmentDto" useGeneratedKeys="true" keyProperty="attachmentId">
        INSERT INTO `Attachment`(
            `qna_id`, -- 문의 ID
            `file_name`, -- 파일명
            `file_path`, -- 파일 경로
            `width`, -- 가로`
            `height`, -- 세로
            `size`, -- 파일 크기
            `extension`, -- 확장자
            `created_id`, -- 생성자 ID
            `updated_id` -- 수정자 ID
        )
        VALUES(
            #{qnaId},
            #{fileName},
            #{filePath},
            #{width},
            #{height},
            #{size},
            #{extension},
            #{createdId},
            #{updatedId}
        );
    </insert>

    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO `Attachment`(
            `qna_id`, -- 문의 ID
            `file_name`, -- 파일명
            `file_path`, -- 파일 경로
            `width`, -- 가로`
            `height`, -- 세로
            `size`, -- 파일 크기
            `extension`, -- 확장자
            `created_id`, -- 생성자 ID
            `updated_id` -- 수정자 ID
        )
        VALUES
        <foreach collection="list" item="item" separator=",">
            (
                #{item.qnaId},
                #{item.fileName},
                #{item.filePath},
                #{item.width},
                #{item.height},
                #{item.size},
                #{item.extension},
                #{item.createdId},
                #{item.updatedId}
            )
        </foreach>
    </insert>

    <!-- READ -->
    <select id="select" parameterType="map" resultType="com.toy2.shop29.qna.domain.AttachmentDto">
        SELECT
            *
        FROM `Attachment`
        WHERE `attachment_id` = #{attachmentId}
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        ORDER BY `attachment_id` DESC;
    </select>

    <select id="selectAll" parameterType="boolean" resultType="com.toy2.shop29.qna.domain.AttachmentDto">
        SELECT
            *
        FROM `Attachment`
        <if test="isActive != null">
            WHERE `is_active` = #{isActive}
        </if>
        ORDER BY `attachment_id` DESC;
    </select>

    <select id="selectAllBy" parameterType="map" resultType="com.toy2.shop29.qna.domain.AttachmentDto">
        SELECT
            *
        FROM `Attachment`
        WHERE `qna_id` = #{qnaId}
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        ORDER BY `attachment_id` DESC;
    </select>

    <select id="count" resultType="int">
        SELECT
            COUNT(*)
        FROM `Attachment`
    </select>

    <!-- UPDATE -->
    <update id="update" parameterType="com.toy2.shop29.qna.domain.AttachmentDto">
        UPDATE `Attachment`
        SET
            `qna_id` = #{qnaId},
            `file_name` = #{fileName},
            `file_path` = #{filePath},
            `width` = #{width},
            `height` = #{height},
            `size` = #{size},
            `extension` = #{extension},
            `is_active` = #{isActive},
            `created_id` = #{createdId},
            `updated_id` = #{updatedId}
        WHERE `attachment_id` = #{attachmentId};
    </update>

    <!-- DELETE -->
    <update id="softDeleteList" parameterType="java.util.List">
        UPDATE `Attachment`
        SET
            `is_active` = false
        WHERE `attachment_id` IN (
            <foreach collection="list" item="item" separator=",">
                #{item}
            </foreach>
        );
    </update>

    <delete id="deleteAll" parameterType="int">
        DELETE FROM `Attachment`
    </delete>


</mapper>